    <div style="position: fixed; display: flex; justify-content: center; align-items: center; height: 100vh; width: 100vw;">
        <div>
            <MudProgressCircular Color="@Color" Indeterminate="true" Size="@Size" />
        </div>
    </div>

    <MudOverlay Style="z-index: 9999;" Visible="true" DarkBackground="true" AutoClose="false" />
}
else
{
    <div class="d-flex justify-content-center align-self-center" style="height: 37px; width: 37px;">
        <MudProgressCircular Color="@Color" Indeterminate="true" Size="@Size" />
    </div>
}

@code
{
    [Parameter] public bool AlignCenter { get; set; } = false;
    [Parameter] public MudBlazor.Color Color { get; set; } = MudBlazor.Color.Primary;
    [Parameter] public MudBlazor.Size Size { get; set; } = Size.Medium;
}
